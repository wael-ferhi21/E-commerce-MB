{% extends 'base.html.twig' %}

{% block title %}Nos Produits {% endblock %}

{% block content %}
<div class="row">
<div class="col-md-3">
    <h1> Filtrer</h1>
    {{ form(form) }}
</div>
<div class="col-md-9">
    <h1> Nos produits</h1>

<div class="row produit-container">
     {% for produit in produits %}
     <div class="col-md-4">
     <div class="produit-item text-center">
        <a href="{{path('produit',{'nom' : produit.nom})}}"><img src="/upload/image/produit/{{produit.image}}" alt="{{produit.nom}}" class="img-fluid"></a>
        <h5>{{produit.nom}} </h5>
        <span class="produit-proddescr">{{produit.proddescr}} </span>
        <span class="produit-prix"> {{(produit.prix / 100)|number_format('2', ',', '.') }} TND</span>
   

    </div>
    </div>
     {% endfor %}
</div>
</div>
</div>






{% endblock %}
